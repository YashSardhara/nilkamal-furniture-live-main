<style>
  .swiper {
    width: 100%;
    height: 100%;
  }

  .pagi__scroll {
    display: grid;
    /* grid-template-columns: 19% 80%; */
    grid-template-columns: 100%;
    background: rgba(0, 0, 0, .3);
    height: 7px;
    border-radius: 5px;
    /* grid-gap: 20px; */
    /* place-items: center;*/
  }

  .mySwiperModular {
    border-radius: 0 !important;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modular__bed__container__slider {
    margin: -30px 0 20px;
    background-color: #fff !important;
  }

  .modular__bed__container__slider .swiper-pagination-progressbar {
    position: static !important;
    /* margin-top: 30px; */
    border: 2px solid rgb(179 184 187);
  }

  .swiper-wrapper.swiper__wrapper__modular {
    padding-bottom: 25px;
  }

  .modular__bed__container__slider .swiper-pagination-progressbar-fill {
    background: #7C7C7C !important;

  }

  .swiper__wrapper__modular {
    /* background-color: #fff !important; */
    border-radius: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }

  .swiper__slide__modular {
    border-radius: 0 !important;
  }

  .swiper-pagination-progressbar {
    height: 10px !important;
    border-radius: 10px !important;
    /*     border-radius : 50% !important; */
  }

  .swiper-button-next:after,
  .swiper-button-prev:after {
    display: none !important;
  }

  .flickity-enabled.is-draggable .flickity-viewport {
    height: 400px !important;
  }

  .swiper-power-fraction {
    display: none;
  }

  @media(max-width:767px) {
    .pagi__scroll {
      margin: 0 30px 0 3px;
      display: grid;
      grid-template-columns: 19% 80%;
      background: transparent;
      height: fit-content;
      grid-gap: 20px;
      place-items: center;
    }

    .swiper-power-fraction {
      color:#000;
      font-weight:700;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper-scrollbar-modular {
      width: 100%;
      height: 5px;
      background: rgba(185, 185, 185, 0.3);
      border-radius: 2px;
    }

    .swiper-scrollbar-modular .swiper-scrollbar-drag {
      background: #7C7C7C !important;
      height: 5px !important;
    }

    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }
</style>

<!-- Swiper -->
<section class="modular__bed__container__slider">

  {% assign pcd = 1 %}
  <div class="swiper mySwiperModular">
    <div class="swiper-wrapper swiper__wrapper__modular">
      {% assign productMainImage = product.metafields.Product %}
      {% if productMainImage["king_image"] != 0 and productMainImage["king_image"] != blank %}
        <div class="swiper-slide swiper__slide__modular modualr__bed__images__king" id="modular__bed__king">
          <a href="{{ productMainImage["king_image"] }}" data-lightbox="{{ product.title | escape }}">
            <img src="{{ productMainImage["king_image"] }}">
          </a>
        </div>
      {% endif %}
      {% assign productMainImage = product.metafields.Product %}
      {% if productMainImage["queen_dimension_image"] != 0 and productMainImage["queen_dimension_image"] != blank %}
        <div class="swiper-slide swiper__slide__modular modualr__bed__images__queen" id="modular__bed__queen">
          <a href="{{ productMainImage["queen_dimension_image"] }}" data-lightbox="{{ product.title | escape }}">
            <img src="{{ productMainImage["queen_dimension_image"] }}">
          </a>
        </div>
      {% endif %}
      {% assign varpci = 0 %}
      {%- if product.media.size > 0 -%}
        {% for media in product.media %}
          {% assign varpci = varpci | plus: 1 %}

          <div class="swiper-slide swiper__slide__modular modualr__bed__images--{% increment pcd %}">
            <a href="{{ media | img_url: '1024x' }}" data-lightbox="{{ product.title | escape }}">
              <img
                src="{{ media | img_url: '1024x' }}"
                alt="{{ product.title | escape }}"
                class="modular__bed__single__image__{% increment pcd %}">
            </a>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    <div class="swiper-button-next">
      <img src="https://cdn.shopify.com/s/files/1/0044/1208/0217/files/Vector_2.svg?v=1677928099" alt="">
    </div>
    <div class="swiper-button-prev">
      <img src="https://cdn.shopify.com/s/files/1/0044/1208/0217/files/svgviewer-output_2.svg?v=1677928099" alt="">
    </div>
    <div class="pagi__scroll">
      <div class="swiper-power-fraction"></div>
      <div class="swiper-scrollbar-modular"></div>
    </div>

  </div>


</section>

<script>
  var swiperProduct = new Swiper(".mySwiperModular", {
    freeMode: true,
    pagination: {
      el: '.swiper-power-fraction',
