      renderCustom: function(swiper, current, total) {
        return current + ' of ' + (
          total - 1
        );
      }
    },
    scrollbar: {
      el: '.swiper-scrollbar-modular',
      hide: false,
      draggable: true
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev"
    },
    breakpoints: {
      640: {
        slidesPerView: 1,
        spaceBetween: 20
      },
      768: {
        slidesPerView: 2,
        spaceBetween: 40
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 20
      }
    }
  });

