  });

  $('.vertical-menu .vertical-menu_submenu.newvermenu li a').each(function (i) {
    $(this).attr('id', 'custom_liactive' + (
      i + 1
    ));
  });

  $('.vertical-menu .vertical-menu_submenu.newvermenu li a').each(function (i) {
    $(this).attr('id', 'custom_liactive' + (
      i + 1
    ));
    $(this).attr('data-liactive', 'liactive' + (
