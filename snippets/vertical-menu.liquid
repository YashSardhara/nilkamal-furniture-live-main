    ));
  });

  $(document).ready(function () {
    $('.vertical-menu_sub-submenu li a').hover(function () {
      $(this).css("color", "#000");
    }, function () {
      $(this).css("color", "#4d4d4d");
    });

    $('.vertical-menu li:first').addClass('firstliclass');

  });

